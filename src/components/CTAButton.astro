---
// CTA Button component - Link to survey form
const {
  href = "#",
  text = "事前アンケートに回答する"
} = Astro.props;
---

<div class="cta">
  <a href={href} class="cta__button" target="_blank" rel="noopener noreferrer">
    {text}
  </a>
</div>

<style>
  .cta {
    padding: var(--spacing-lg) var(--spacing-sm);
    background-color: var(--color-bg);
  }

  .cta__button {
    display: block;
    max-width: var(--max-width);
    margin-inline: auto;
    padding: var(--spacing-sm) var(--spacing-md);
    background-color: var(--color-accent);
    color: var(--color-white);
    text-align: center;
    font-family: var(--font-body);
    font-size: calc(16 * var(--fluid-unit));
    letter-spacing: 0.1em;
    border-radius: 0;
    transition: opacity 0.2s ease;
  }

  @media (min-width: 641px) {
    .cta__button {
      font-size: 16px;
    }
  }

  .cta__button:hover,
  .cta__button:focus {
    opacity: 0.85;
  }

  .cta__button:focus-visible {
    outline: 2px solid var(--color-text);
    outline-offset: 2px;
  }
</style>
